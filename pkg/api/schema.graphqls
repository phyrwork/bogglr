type PageInfo {
  startCursor: ID!
  endCursor: ID!
  hasNextPage: Boolean
}

type Game {
  id: ID!
  board: [String!]!
}

type GamesConnection {
  edges: [Game!]!
  pageInfo: PageInfo!
}

type GamesEdge {
  cursor: ID!
  node: Game
}

type Query {
  games(first: Int = 20, after: ID): GamesConnection
}

type Mutation {
  createGame(board: [String!]!): Game!
}
